{
  "name": "claude-bridge-web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "chmod +x node_modules/node-pty/prebuilds/darwin-arm64/spawn-helper 2>/dev/null || true",
    "dev": "tsx server.ts",
    "build:server": "esbuild server.ts --bundle --platform=node --format=cjs --outfile=dist/server.cjs --packages=external --sourcemap",
    "build": "next build && npm run build:server",
    "prestart": "test -f dist/server.cjs || (echo 'Run npm run build first' && exit 1)",
    "start": "NODE_ENV=production node dist/server.cjs",
    "setup:push": "./scripts/setup-push.sh"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-unicode11": "^0.9.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "next": "^15.1.0",
    "node-pty": "^1.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "web-push": "^3.6.7",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/web-push": "^3.6.4",
    "@types/ws": "^8.5.13",
    "esbuild": "^0.27.3",
    "postcss": "^8.5.0",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
