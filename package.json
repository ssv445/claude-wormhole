{
  "name": "claude-wormhole-web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "chmod +x node_modules/node-pty/prebuilds/darwin-arm64/spawn-helper 2>/dev/null || true",
    "dev": "set -a; . ./.env.local 2>/dev/null; set +a; tsx server.ts",
    "build:server": "esbuild server.ts --bundle --platform=node --format=cjs --outfile=dist/server.cjs --packages=external --sourcemap",
    "prebuild": "node -e \"fs=require('fs');fs.writeFileSync('build-version.json',JSON.stringify({v:Date.now().toString()}))\"",
    "build": "next build && npm run build:server",
    "prestart": "test -f dist/server.cjs || (echo 'Run npm run build first' && exit 1)",
    "start": "set -a; . ./.env.local 2>/dev/null; set +a; NODE_ENV=production node dist/server.cjs",
    "setup:push": "./bin/wormhole setup push",
    "test": "npx playwright test --config tests/playwright.config.ts",
    "test:mobile": "npx playwright test --config tests/playwright.config.ts --project mobile-webkit",
    "test:mobile:headed": "npx playwright test --config tests/playwright.config.ts --project mobile-webkit --headed",
    "test:simulator": "npx wdio run tests/wdio/wdio.conf.ts"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-unicode11": "^0.9.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/xterm": "^6.0.0",
    "next": "^15.1.0",
    "node-pty": "^1.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "web-push": "^3.6.7",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/web-push": "^3.6.4",
    "@types/ws": "^8.5.13",
    "@wdio/cli": "^9.24.0",
    "@wdio/globals": "^9.23.0",
    "@wdio/local-runner": "^9.24.0",
    "@wdio/mocha-framework": "^9.24.0",
    "@wdio/spec-reporter": "^9.24.0",
    "esbuild": "^0.27.3",
    "postcss": "^8.5.0",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
